<Page x:Class="WpfCrypto.Views.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCrypto.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Account">

    <Grid Background="White">
        <Label Name="Hello" Content="" HorizontalAlignment="Left" Margin="59,78,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Cascadia Mono SemiBold" Width="352"/>
        <DataGrid x:Name="dataGridView1" Margin="59,122,59,0" FontSize="14" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HeadersVisibility="Column" Background="{x:Null}" BorderBrush="{x:Null}" VerticalGridLinesBrush="White" HorizontalGridLinesBrush="White" Foreground="#FF7C7C7C" Height="288" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="300" Binding="{Binding name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Number" Width="300" Binding="{Binding sum}"></DataGridTextColumn>
                <DataGridTextColumn Header="Dollar" Width="300" Binding="{Binding dollars}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
